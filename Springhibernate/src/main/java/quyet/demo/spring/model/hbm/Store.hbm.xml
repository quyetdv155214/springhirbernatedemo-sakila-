<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="quyet.demo.spring.model">
    <class name="Store" table="store">
        <id name="storeId" column="store_id">
            <generator class="identity"/>
        </id>

        <property name="storeName" type="string">
            <column name="store_name"/>
        </property>

        <list name="addresses" cascade="all" inverse="true" fetch="join" lazy= "false">
            <key><column name="store_id"/></key>
            <list-index column="id"/>
            <one-to-many class="Address"/>
        </list>

    </class>
</hibernate-mapping>