<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="quyet.demo.spring.model">
    <class name="Category" table="CATEGORY">
        <id name="categoryId" column="CATEGORY_ID">
            <generator class="identity"/>
        </id>

        <property name="categoryName" type="string">
            <column name="CATEGORY_NAME"/>
        </property>

        <property name="categoryCode" type="string">
            <column name="CATEGORY_CODE" not-null="true" unique="true"/>
        </property>
        <list name="products" table="PRODUCT_CATEGORY">
            <key>
                <column name="CATEGORY_ID" not-null="true"/>
            </key>
            <list-index column="product_id"/>
            <many-to-many class="Product">
                <column name="PRODUCT_ID" not-null="true"/>
            </many-to-many>
        </list>
        
        <!--product-->

    </class>
</hibernate-mapping>