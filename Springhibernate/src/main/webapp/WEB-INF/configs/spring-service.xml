<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

    <import resource="spring-datasource.xml"/>
    <import resource="applicationContext.xml"/>

    <bean name="addressService" parent="baseTransactionProxy">
        <property name="target">
            <bean class="quyet.demo.spring.service.impl.AddressServiceImpl">
                <property name="addressDAO" ref="addressDAO"/>
            </bean>
        </property>
    </bean>

    <bean name="storeService" parent="baseTransactionProxy">
        <property name="target">
            <bean class="quyet.demo.spring.service.impl.StoreServiceImpl">
                <property name="storeDAO" ref="storeDAO"/>
            </bean>
        </property>
    </bean>

    <bean name="categoryService" parent="baseTransactionProxy">
        <property name="target">
            <bean class="quyet.demo.spring.service.impl.CategoryServiceImpl">
                <property name="categoryDAO" ref="categoryDAO"/>
            </bean>
        </property>
    </bean>

    <bean name="productService" parent="baseTransactionProxy">
        <property name="target">
            <bean class="quyet.demo.spring.service.impl.ProductServiceImpl">
                <property name="productDAO" ref="productDAO"/>
            </bean>
        </property>
    </bean>
</beans>
